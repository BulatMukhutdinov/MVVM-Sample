<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/arrow_up"
        android:drawable="@drawable/arrow_up"
        android:state_active="false" />

    <item
        android:id="@+id/arrow_down"
        android:drawable="@drawable/arrow_down"
        android:state_active="true" />

    <transition
        android:drawable="@drawable/anim_arrow_down_to_up"
        android:fromId="@id/arrow_down"
        android:toId="@id/arrow_up" />

    <transition
        android:drawable="@drawable/anim_arrow_up_to_down"
        android:fromId="@id/arrow_up"
        android:toId="@id/arrow_down" />


</animated-selector>